<%- include('../partials/headParte1') %>
  <!--Aqui se agregan los estilos personales-->
  <link rel="stylesheet" href="../css/productForm.css">

  <%- include('../partials/headParte2') %>

    <%- include('../partials/header') %>

      <main>
        <div class="content">

          <!-- <h1 class="logo">Publica Un Libro Nuevo</h1> -->

          <div class="box">
            <div class="libro-form">
               <h1 class="titulo">Publica Un Libro Nuevo</h1>
               <form action="">
                <p>
                  <label for="title">Título</label>
                  <input type="text" id="title"/>
                </p>
                <p>
                  <label for="autor">Autor</label>
                  <input type="text" id="autor" />
                </p>
                <p>
                  <label for="editorial">Editorial</label>
                  <input type="text" id="editorial"/>
                </p>
                <p>
                  <label for="paginas">Páginas</label>
                  <input type="number" id="paginas"/>
                </p>
                <p>
                  <label for="idioma">Idioma</label>
                  <input type="text" id="idioma">
                </p>
                <p>
                  <label for="tipo_tapa">Tipo de Tapa</label>
                  <input type="text" id="tipo_tapa">
                </p>
                <p>
                  <label for="tematica">Temática</label>
                  <input type="text" id="tematica">
                </p>
                <p>
                  <label for="sinopsis">Sinopsis</label>
                  <input type="text" id="sinopsis">
                </p>
                <p>
                  <label for="precio">Precio</label>
                  <input type="number" id="precio" min="0" max="9999" placeholder="$">
                </p>
                <p>
                  <label for="lanzamiento">Año de Lanzamiento</label>
                  <input type="text" id="lanzamiento" pattern="^\d{4}$" placeholder="YYYY">
                </p>
                <p class="block">
                  <label for="portada">Seleccione Foto de Portada</label>
                  <input type="file" id="portada" accept=".jpg">
                </p>
                <p class="block">
                  <button type="submit">
                    Publicar
                  </button>
                </p>
               </form>
            </div>
            <div class="libro-image">
              
            </div>
          </div>

        </div>
      </main>

      <%- include('../partials/footer') %>