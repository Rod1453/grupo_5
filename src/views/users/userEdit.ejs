<%- include('../partials/headParte1') %>
    <!--Aqui se agregan los estilos personales-->
    <link rel="stylesheet" href="/css/profile.css" />
    <link rel="stylesheet" href="/css/editUser.css" />
    <%- include('../partials/headParte2') %>
        <%- include('../partials/header') %>
            <main class="container">
                <div class="container-foto">
                    <img id="foto-perfil" src="<%=locals.oldImage?oldImage: user.imagen %>" alt="img">
                </div>
                <div class="datos">
                    <h2 class="username">
                        <%=locals.oldEmail?oldEmail: user.email %>
                    </h2>
                    <br>
                    <form action="/user/update" method="post" enctype="multipart/form-data">
                        <input class="entrada" type="text" name="id"  value="<%=locals.oldData?oldData.id: user.id %>" hidden="true"/>
                        <label for="nombre">Nombre</label>
                        <input class="entrada" type="text" name="nombre" value="<%=locals.oldData?oldData.nombre: user.nombre %>" />
                        <% if (locals.errors && errors.nombre) { %>
                            <p class="error-msg">*<%= errors.nombre.msg %></p>
                          <% } %>
                        <label for="apellido">Apellido</label>
                        <input class="entrada" type="text" name="apellido" value="<%=locals.oldData?oldData.apellido: user.apellido %>">
                        <% if (locals.errors && errors.apellido) { %>
                            <p class="error-msg">*<%= errors.apellido.msg %></p>
                        <% } %>
                        <label for="password">Contraseña</label>
                        <input class="entrada" type="password" name="password">
                        <% if (locals.errors && errors.password) { %>
                            <p class="error-msg">*<%= errors.password.msg %></p>
                        <% } %>
                        <label for="confirmPassword">Confirmar contraseña</label>
                        <input class="entrada" type="password" name="confirmPassword">
                        <% if (locals.errors && errors.confirmPassword) { %>
                            <p class="error-msg">*<%= errors.confirmPassword.msg %></p>
                        <% } %>
                        <label for="image">Subir foto de perfil</label>
                        <input class="entrada" type="file" name="image" id="image">
                        <div class="button-group">
                            <button type="submit">Guardar</button>
                            <a href=""></a>
                        </div>
                    </form>
                </div>
            </main>

            <%- include('../partials/footer') %>